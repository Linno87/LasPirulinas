<!DOCTYPE html>
<html>
 <%- include('partials/head',{title: 'Login' }) %>
  <body>
    
    <%- include('partials/navbarheader') %>
    <main class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-6 mx-auto">
                <div class="card shadow">
                  <div class="card-body">
                    <h3>Iniciá sesión</h3>
                    <hr>
                    <form class="row" method="POST">
                      <div class="col-12 mb-3">
                        <label class="form-label pe-3 col-2" for="email">Email</label>
                        <input class="col-9" type="email" id="email" name="email">
                        <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.email && errors.email.msg) %></small>
                      </div>
                        <div class="col-12 mb-3">
                            <label class="form-label col-2" for="password">Contraseña</label>
                            <input class="col-9" type="password" id="password" name="password">
                            <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.password && errors.password.msg) %></small>
                        </div>
                        <div class="col-12 mb-3 d-flex justify-content-end">
                            <a class="text-dark small" href="">Olvidé mi contraseña</a>
                        </div>
                        
                      
                        <div class="d-flex justify-content-around">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="remember" name="remember">
                                <label class="form-check-label" for="remember">
                                  Recordame
                                </label>
                              </div>
                            <button class="btn btn-primary" type="submit">Ingresá</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
