<!DOCTYPE html>
<html>
 <%- include('partials/head',{title: 'Login' }) %>
  <body>
    
    <%- include('partials/navbarheader') %>
    <main class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-3 col-lg-8 mx-auto">
                <div class="card shadow">
                  <div class="card-body">
                    <h3 class="fs-4 text-center">Perfil de <%= name %></h3>
                    <hr>
                    <form class="row" method="POST">
                      <div class="col-4">
                         <img src="/images/users/<%= image ||'default-image.jpg'%>" class="img-fluid" alt="No encontrada" style="width: 200px; height: 200px;">
                         
                        </div>
                      <div class="col-8 d-flex justify-content-between flex-wrap">
                        <div class="col-6 my-2">
                            <label class="col-12 fs-6" for="name">Nombre</label>
                            <input class="col-10" id="name" name="name" value="<%= name %>" disabled>
                        </div>
                        <div class="col-6 my-2">
                            <label class="col-12 fs-6" for="apellido">Apellido</label>
                            <input class="col-10" id="apellido" name="apellido" value="<%= apellido %>" disabled>
                        </div>
                        <div class="col-12 my-2">
                            <label class="col-12 fs-6" for="email">Email</label>
                            <input class="col-10" id="email" name="email" value="<%= email %>" disabled>
                        </div>
                        <div class="col-6 my-2">
                            <label class="col-12 fs-6" for="address">Dirección</label>
                            <input class="col-10" id="address" name="address" value="<%= address %>" disabled>
                        </div>
                        <div class="col-6 my-2">
                            <label class="col-12 fs-6" for="phone">Teléfono</label>
                            <input class="col-10" id="phone" name="phone" value="<%= phone %>" disabled>
                        </div>
                        <div class="form-floating col-12 my-2">
                            <textarea class="form-control mb-3" placeholder="Leave a comment here" id="description"></textarea>
                            <label for="description"><%= description %></label>
                        </div>
                      </div>
                      <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">Editar</button>
                        </div>
                        
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
