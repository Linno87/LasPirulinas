<!DOCTYPE html>
<html>
 <%- include('partials/head',{title: 'Login' }) %>
  <body>
    
    <%- include('partials/navbarheader') %>
    <main class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-6 mx-auto">
                <div class="card shadow">
                  <div class="card-body">
                    <h3>Crear Usuario</h3>
                    <hr>
                    <form class="row"  method="POST">
                        <div class="col-6 mb-3">
                            <label class="form-label pe-2" for="name">Nombre</label>
                            <input class="col-8" type="name" id="name" name="name" value="<%= locals.old && (old.name && old.name) %>">
                            <small class="ms-2 text-danger d-block"><%= locals.errors && (errors.name && errors.name.msg) %></small>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label pe-2" for="apellido">Apellido</label>
                            <input class="col-8" type="apellido" id="apellido" name="apellido" value="<%= locals.old && (old.apellido && old.apellido)%>">
                            <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.apellido && errors.apellido.msg) %></small>
                        </div>
                       

                        <div class="col-12 mb-3">
                            <label class="form-label pe-3" for="email">Email</label>
                            <input class="col-9" type="email" id="email" name="email" value="<%= locals.old && (old.email && old.email) %>">
                            <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.email && errors.email.msg) %></small>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label col-12" for="nacimiento">Nacimiento</label>
                            <input class="col-9" type="date" id="nacimiento" name="nacimiento">
                            <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.nacimiento && errors.nacimiento.msg) %></small>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label col-12" for="color">Elige un color de fondo</label>
                            <div class="col-12">
                                <select class="col-7 text-center" name="color">
                                    <option value="green" selected>Verde</option>
                                    <option value="blue">Azul</option>
                                    <option value="yellow">Amarillo</option>
                                    <option value="red">Rojo</option>
                                    <option value="light">Blanco</option>
                                </select>
                            </div>
                            
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label col-12" for="password">Contraseña</label>
                            <input class="col-12" type="password" id="password" name="password">
                            <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.password && errors.password.msg) %></small>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label col-12 fs-6" for="password2">Repite Contraseña</label>
                            <input class="col-12" type="password" id="password2" name="password2">
                            <small class="ms-2 text-danger fw-6 d-block"><%= locals.errors && (errors.password && errors.password.msg) %></small>
                        </div>
                      
                        <div class="d-flex justify-content-end gap-2">
                            <button class="btn btn-primary" type="reset">Cancelar</button>
                            <button class="btn btn-primary" type="submit">Ingresá</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>